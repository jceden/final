<%= link_to 'Edit', edit_image_path(@image) %> |
<%= link_to 'Back', images_path %>
<p id="notice"><%= notice %></p>
<center><table>
<%= image_tag root_url + "/images/" + @image.filename, size: "500x550", alt: @image.filename %><br>
<%= render 'yes_vote', image: @image %>
<% if @image.total_vote != 0%>
	<%= @image.cute_vote/@image.total_vote%>
<% else %>
<%@image.percent_cute%>	
<% end %>
<%= render 'no_vote', image: @image %>
</table></center>
<%if user_signed_in?%>
	<%if @image.posts.length == 1 %>
		No comments on this image yet, be the first!
		<%= render 'posts/form'%>
	<%else%>
	<table>
		<%@image.posts.each do |post|%>
			<%if !post.new_record? %>
<tr>
				<%=post.comment%><br>
			Posted by: <%=post.username%>
<br>
			Posted on: <%=post.created_at%>
<br>
			<%end%>
		<%end%>
	<br>
	<%= render 'posts/form'%>
	<%end%>
</table>
<%end%>

